#:import utils kivy.utils
# kivy design language
<TheLayout>:
    BoxLayout:
        size: root.width, root.height
        orientation: "horizontal"

        spacing: 50
        padding: 100

        Button:
            text: "Search"
            pos_hint: {'center_x': .5}
            size_hint: (.125, .125)
            background_normal: ''
            background_color: (0,0.6,1,.5)

        Button:
            text: "Create CSV"
            pos_hint: {'center_x': .5}
            size_hint: (.125, .125)
            background_normal: ''
            background_color: (0,0.6,1,.5)
            # background_color: utils.get_color_from_hex('#eeefff')
