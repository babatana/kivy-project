#:import utils kivy.utils
#:import get_data_result Modules.scrapper.get_data_result
#:import print_out Kivy.box.print_out
# kivy design language
<TheLayout>:
    BoxLayout:
        size: root.width, root.height
        orientation: "horizontal"

        spacing: 50
        padding: 100

        Button:
            text: "Search"
            pos_hint: {'center_x': .5}
            size_hint: (.125, .125)
            background_normal: ''
            background_color: (0,0.6,1,.5)
            on_press: print_out()

        Button:
            text: "Create CSV"
            pos_hint: {'center_x': .5}
            size_hint: (.125, .125)
            background_normal: ''
            background_color: (0,0.6,1,.5)
            on_press: get_data_result()
            # background_color: utils.get_color_from_hex('#eeefff')

        Button:
            text: "Open"
            pos_hint: {'center_x': .5}
            size_hint: (.125, .125)
            background_normal: ''
            background_color: (0,0.6,1,.5)
            on_press: print_out()
